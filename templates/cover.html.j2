<article id="doc-cover">
    {% if cover_logo is defined %}
        <div class="wrapper upper">
            <p class="subtitle">Centre de Formation Professionnelle Technique</p>
            <div class="logo" style="background-image: url({{ cover_logo | to_url }});"></div>
        </div>
    {% else %}
        <div class="wrapper"></div>
    {% endif %}
    <div class="wrapper">
        <p class="subtitle">Travail de dipl√¥me</p>
        <h1>{{ cover_title | e }}</h1>
        <h2>{{ cover_subtitle | e }}</h2>
        <div class="cfpt" style="background-image: url({{ 'img/logo.png' | to_url }});"></div>
    </div>
    <div class="properties">
        <address>
            {% if author is defined %}
                <p id="author">{{ author | e }}</p>
            {% endif %}
            {% if copyright is defined %}
                <p id="copyright">{{ copyright | e }}</p>
            {% endif %}
        </address>
    </div>
</article>